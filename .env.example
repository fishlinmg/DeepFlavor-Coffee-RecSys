# 环境配置示例文件
# 复制此文件为 .env 并修改相应配置

# Flask配置
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# 数据路径
DATA_PATH=data/coffee_data.csv
MODEL_SAVE_PATH=models/autoencoder_model.h5
EMBEDDING_SAVE_PATH=data/coffee_embeddings.npy
KNN_INDEX_PATH=data/knn_index.pkl

# 模型配置
INPUT_DIM=10
LATENT_DIM=64
EPOCHS=50
BATCH_SIZE=32

# 推荐配置
TOP_K=5
SIMILARITY_THRESHOLD=0.5

# 服务器配置
HOST=0.0.0.0
PORT=5000
DEBUG=True
